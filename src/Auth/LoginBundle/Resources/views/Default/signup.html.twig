{% extends 'AuthLoginBundle:Default:index.html.twig' %}
{% block container %}
	<form class='' method="POST" action="{{ path('auth_login_signup') }}">
		<h2>Please sign in</h2>
		<input type='text' placeholder='firstname' name='signupFirstname'>
		<input type='text' placeholder='lastname' name='signupLastname'>
		<select name='signupGender'>
			<option>Title</option>
			<option value="m">Herr</option>
			<option value='w'>Frau</option>			
		</select>
		<input type='text' placeholder='email' name='signupEmail'>
		<input tpye='password' placeholder='Password' name='signupPassword'>
		<button type='submit'>Create Account</button>
	</form>

	<!-- ALERT In Bootstrap it will work -->
	{% if error is defined %}
		<div class='alert-info fade in'> <strong>Login Failed</strong></div>
	{% else %}
		<div class='alert-info fade in'> <strong>Login Success</strong></div>
	{% endif %}
{% endblock %}